{
  "policy" : {
    "phases" : {
      "hot" : {
        "actions" : {
          "rollover" : {
            "max_size" : "20gb",
            "max_docs" : 100000000,
            "max_age" : "7d"
          },
          "set_priority": {
            "priority": 50
          }
        }
      },
      "warm" : {
        "min_age" : "30d",
        "actions" : {
          "readonly" : { },
          "allocate" : {
            "number_of_replicas" : 0
          },
          "forcemerge": {
            "max_num_segments": 1
          },
          "shrink": {
            "number_of_shards": 1
          },
          "set_priority": {
            "priority": 25
          }
        }
      },
      "cold" : {
        "min_age" : "150d",
        "actions" : {
          "allocate" : {
            "number_of_replicas" : 0
          },
          "freeze" : { },
          "set_priority": {
            "priority": 0
          }
        }
      },
      "delete" : {
        "min_age" : "365d",
        "actions" : {
          "delete" : { }
        }
      }
    }
  }
}
